@model BangazonWorkforce.Models.Department
@{
    ViewData["Title"] = "Details";
}
<h1>@Html.DisplayFor(model => model.Name)</h1>
<div>
    <h4>Department</h4>
    <hr />
    <dl class="row">
        @*Information on each department*@
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Budget)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Budget)
        </dd>
        <dt class="col-sm-2">Employees</dt>
        <dd>
            @*Loop to show employees in Details*@
            <ul class="list-unstyled">
                @foreach (Employee employee in Model.Employees)
                {
                    <li>
                        @Html.DisplayFor(model => employee.FirstName) @Html.DisplayFor(model => employee.LastName)
                    </li>
                }
            </ul>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
