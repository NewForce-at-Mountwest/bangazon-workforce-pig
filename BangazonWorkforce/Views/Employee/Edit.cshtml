@model BangazonWorkforce.Models.ViewModels.EditEmployeeViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>EditEmployeeViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
       
                <div class="form-group">
                    <label asp-for="Employee.LastName" class="control-label"></label>
                    <input asp-for="Employee.LastName" class="form-control" />
                    <span asp-validation-for="Employee.LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Departments" class="control-label"></label>
                    <select asp-for="Employee.DepartmentId" asp-items="@Model.Departments"></select>
                </div>
                <div class="form-group">
                    <label asp-for="Employee.CurrentComputer" class="control-label"></label>
                    <select asp-for="Employee.CurrentComputer.Id" asp-items="@Model.Computers"></select>
                </div>

                <input type="submit" value="Save" class="btn btn-primary" />
           
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
